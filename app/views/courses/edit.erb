<h3>Edit <%= @course.name%></h3>

<form method="POST" action="/courses/<%= @course.id %>">
    

    Name: <input type="text" name="course[name]" value=<%= @course.name%>><br>
    Professor: <input type="text" name="course[professor]" value=<%= @course.professor%>><br>
    Credits: <input type="text" name="course[credits]" value=<%= @course.credits%>><br>

    <input type="hidden" name="_method" value="patch">
    <input type="submit" value="Edit course">


</form>